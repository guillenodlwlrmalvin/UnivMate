        max-width: 1600px;
        margin: 0 auto;
        padding: 0 1.5rem 2rem;
    }

    /* ===== Header Styles ===== */
    .admin-header {
        background-color: var(--white);
        box-shadow: var(--shadow-sm);
        padding: 1rem 0;
        margin-bottom: 1.5rem;
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .header-content {
