@{
    ViewData["Title"] = "UnivMate - Connect with Your Campus";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --univmate-red: #d62839;
            --univmate-dark-red: #a4161a;
            --univmate-light: #f8f9fa;
            --univmate-dark: #212529;
            --univmate-gray: #6c757d;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background-color: #f9f9f9;
            color: var(--univmate-dark);
            min-height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
            line-height: 1.6;
        }

        .hero-section {
            background: linear-gradient(135deg, var(--univmate-red), var(--univmate-dark-red));
            color: white;
            padding: 5rem 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .hero-content {
            max-width: 800px;
            margin: 0 auto;
            position: relative;
            z-index: 2;
        }

        .app-logo {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 1rem;
            letter-spacing: -0.5px;
        }

        .app-tagline {
            font-size: 1.25rem;
            margin-bottom: 2.5rem;
            opacity: 0.9;
            font-weight: 400;
        }

        .auth-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .btn-hero {
            padding: 0.75rem 2rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
            min-width: 150px;
        }

        .btn-primary {
            background-color: white;
            color: var(--univmate-red);
            border: none;
        }

        .btn-outline-light {
            border: 2px solid white;
            color: white;
            background-color: transparent;
        }

        .btn-primary:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            background-color: white;
            color: var(--univmate-dark-red);
        }

        .btn-outline-light:hover {
            background-color: rgba(255,255,255,0.15);
            border-color: white;
        }

        .features-section {
            padding: 5rem 2rem;
            background-color: white;
        }

        .section-title {
            text-align: center;
            margin-bottom: 3rem;
            color: var(--univmate-dark-red);
            font-weight: 700;
        }

        .feature-card {
            padding: 2rem;
            border-radius: 12px;
            background: white;
            height: 100%;
            transition: transform 0.3s ease;
            border: 1px solid rgba(0,0,0,0.05);
        }

            .feature-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(214, 40, 57, 0.1);
            }

        .feature-icon {
            font-size: 2.5rem;
            color: var(--univmate-red);
            margin-bottom: 1.5rem;
        }

        .feature-title {
            font-weight: 600;
            margin-bottom: 1rem;
            color: var(--univmate-dark);
        }

        footer {
            background-color: var(--univmate-dark);
            color: white;
            padding: 2rem;
            text-align: center;
            font-size: 0.9rem;
        }

        .footer-links {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
            margin-bottom: 1rem;
        }

            .footer-links a {
                color: white;
                text-decoration: none;
                transition: opacity 0.3s;
            }

                .footer-links a:hover {
                    opacity: 0.8;
                }

        @@media (max-width: 768px) {
            .app-logo {
                font-size: 2.2rem;
            }

            .app-tagline {
                font-size: 1.1rem;
            }

            .auth-buttons {
                flex-direction: column;
                align-items: center;
            }

            .feature-card {
                margin-bottom: 1.5rem;
            }
        }
    </style>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="hero-section">
        <div class="hero-content">
            <h1 class="app-logo">UnivMate</h1>
            <p class="app-tagline">Your campus connection platform. Collaborate, share, and grow with your academic community.</p>

            <div class="auth-buttons">
                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-hero">
                    <i class="bi bi-box-arrow-in-right"></i> Login
                </a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light btn-hero">
                    <i class="bi bi-person-plus"></i> Register
                </a>
            </div>
        </div>
    </div>

    <div class="features-section">
        <div class="container">
            <h2 class="section-title">Why Join UnivMate?</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <h3 class="feature-title">Build Your Network</h3>
                        <p>Connect with classmates, professors, and staff across departments to enhance your academic journey.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="bi bi-journal-bookmark-fill"></i>
                        </div>
                        <h3 class="feature-title">Share Resources</h3>
                        <p>Exchange study materials, lecture notes, and research with your peers in a centralized platform.</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="bi bi-graph-up-arrow"></i>
                        </div>
                        <h3 class="feature-title">Enhance Learning</h3>
                        <p>Collaborate on projects, join study groups, and access exclusive academic resources.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer>
        <div class="footer-links">
            <a href="#">About</a>
            <a href="#">Contact</a>
            <a href="#">Privacy</a>
            <a href="#">Terms</a>
        </div>
        <p>&copy; @DateTime.Now.Year UnivMate. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>